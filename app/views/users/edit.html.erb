<% provide(:title, 'Sign up') %>
<%= render 'layouts/header' %>

<div class="container">
<h1>Edit Profile</h1>
    <%= form_for(@user,url: users_update_path,html:{class: 'form-horizontal',multipart: true}) do |f| %>
      <div >
      <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <% end %>
      </div>
      <div class="form-group">
      <%= f.label :roll   ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :roll_number ,class: "form-control" , disabled: true%>
      </div>
      </div>
      <div class="form-group">

      <%= f.label :name ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
        <%= f.text_field :name ,class: "form-control"%>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :email,class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :email ,class: "form-control" %>
      </div>
      </div>
      
      
      <div class="form-group">
      <%= f.label :cgpa ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :cgpa ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :age ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :age ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :gender ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :gender  ,class: "form-control" %>
      </div>
      </div>
      
      <div class="form-group">
      <%= f.label :password ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.password_field :password ,class: "form-control"   %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :password_confirmation ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.password_field :password_confirmation ,class: "form-control"   %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :photo ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.file_field :dp ,class: "form-control"   %>
      </div>
      </div>
      <div class="form-group">
      <div class="col-md-4">
      
      </div>
      <%= f.submit "Update Profile", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>

