<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <div>
      <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |e| %>
      <%= e %><br>
      <% end %>
      <% end %>
      </div>

      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :email %>
      <%= f.text_field :email %><br>

      <%= f.label :password %>  
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br>
      <%= f.label :cgpa %>
      <%= f.text_field :cgpa %><br>
      <%= f.label :age %>
      <%= f.text_field :age %><br>
      <%= f.label :gender %>
      <%= f.text_field :gender %><br>
      <%= f.label :roll   %>
      <%= f.text_field :roll_number %><br>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %><br>
    <% end %>
  </div>
</div>