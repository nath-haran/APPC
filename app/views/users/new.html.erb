<% provide(:title, 'Sign up') %>


<div class="container">
<h1>Sign up</h1>
    <%= form_for(@user,html:{class: 'form-horizontal' }) do |f| %>
      <div >
      <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |e| %>
      
      <%= e %><br>
      <% end %>
      <% end %>
      </div>
      <div class="form-group">

      <%= f.label :name ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
        <%= f.text_field :name ,class: "form-control"%>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :email,class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :email ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :password ,class: "col-md-2 control-label"%>  
      <div class="col-md-4">
      <%= f.password_field :password ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :password_confirmation, "Confirmation",class: "col-md-2 control-label" %>
      <div class="col-md-4">
      <%= f.password_field :password_confirmation ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :cgpa ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :cgpa ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :age ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :age ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :gender ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :gender  ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <%= f.label :roll   ,class: "col-md-2 control-label"%>
      <div class="col-md-4">
      <%= f.text_field :roll_number ,class: "form-control" %>
      </div>
      </div>
      <div class="form-group">
      <div class="col-md-4">
      </div>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>

