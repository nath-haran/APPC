<% provide(:title,"sign in") %>
<body>
<div class="container ">
      <div class="row">
        <div class="col-md-4  ">
            <div class="panel panel-default ">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span> Login</div>
                <div class="panel-body">
                  <%= form_for(:session, url: sessions_path,html:{class: "form-horizontal "}) do |f| %>
                	 <div id="flash_messages">
                	  <% flash.each do |key, value| %>
                	    <%= content_tag(:div, value, :class => "flash #{key}") %>
                	  <% end %>
                	  </div>
                    <div class="form-group">
                      <%= f.label :roll_number, class: "control-label col-md-3" %>
                      <div class="col-md-9">
                      <%= f.text_field :roll_number ,class: "form-control"%>
                      </div>
                    </div>
                    <div class="form-group">
                      <%= f.label :password , class: "control-label col-md-3"%>
                      <div class="col-md-9">
                      <%= f.password_field :password ,class: "form-control"%>
                      </div>
                    </div>
                    <div class="form-group last">
                        <div class="col-sm-offset-3 col-sm-9">
                      <%= f.submit "Sign in", class: "btn btn-sm btn-success" %>
                      </div>
                      </div>
                      <div class="panel-footer">
                    Not Registred? <a href="http://localhost:3000/signup">Register here</a></div>
                     <% end %>
            </div>
          </div>
         </div>
    
        </div>  
                 
 </body>

    

